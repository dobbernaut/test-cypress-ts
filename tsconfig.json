{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "es2020",
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "cypress"],
    "paths": {
      "@services/*": ["./cypress/services/*"],
      "@pages/*": ["./cypress/pages/*"]
    }
  },
  "exclude": ["node_modules", "./.github", "./.vscode"]
}
